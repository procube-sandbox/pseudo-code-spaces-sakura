{
  "name": "Pseudo Code Spaces Sakura Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "redhat.ansible",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n"
      }
    }
  },
  "remoteEnv": {
    "TF_VAR_sakura_token": "${localEnv:TF_VAR_SAKURA_TOKEN}${localEnv:TF_VAR_sakura_token}",
    "TF_VAR_sakura_secret": "${localEnv:TF_VAR_SAKURA_SECRET}${localEnv:TF_VAR_sakura_secret}",
    "TF_VAR_ssh_public_key": "${localEnv:TF_VAR_SSH_PUBLIC_KEY}${localEnv:TF_VAR_ssh_public_key}",
    "TF_VAR_domain": "${localEnv:TF_VAR_DOMAIN}${localEnv:TF_VAR_domain}",
    "TF_VAR_github_client_id": "${localEnv:TF_VAR_GITHUB_CLIENT_ID}${localEnv:TF_VAR_github_client_id}",
    "TF_VAR_github_client_secret": "${localEnv:TF_VAR_GITHUB_CLIENT_SECRET}${localEnv:TF_VAR_github_client_secret}"
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ],
  "forwardPorts": [],
  "portsAttributes": {},
  "postAttachCommand": "",
  "remoteUser": "vscode"
}
